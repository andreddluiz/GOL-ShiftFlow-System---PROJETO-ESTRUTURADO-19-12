
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNÇÕES AUXILIARES ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users_v2/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return getUserData().permissionLevel == 'ADMINISTRADOR';
    }
    
    function isLider() {
      return getUserData().permissionLevel == 'LÍDER';
    }
    
    function hasBaseAccess(baseId) {
      return isAdmin() || baseId in getUserData().bases;
    }
    
    function canEdit() {
      return isAdmin() || isLider();
    }

    // --- REGRAS POR COLEÇÃO ---

    // 1. Turnos e Passagens (Estrutura Hierárquica)
    match /handovers/{baseId}/shifts/{shiftId} {
      allow read: if isAuthenticated() && hasBaseAccess(baseId);
      allow create: if isAuthenticated() && hasBaseAccess(baseId);
      allow update, delete: if isAuthenticated() && hasBaseAccess(baseId) && canEdit();
    }

    // 2. Cadastro de Bases
    match /bases/{baseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isAdmin();
    }

    // 3. Perfis de Usuário V2
    match /users_v2/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // 4. Catálogo de Tarefas
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isAdmin();
    }

    // 5. Comunicados/Mural
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // Bloqueio padrão para qualquer outra rota não mapeada
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
